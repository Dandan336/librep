top_builddir=..
VPATH=@top_srcdir@/src:.

COMMON_SRCS =	debug-buffer.c files.c find.c lisp.c lispcmds.c lispmach.c \
		main.c message.c misc.c regexp.c regsub.c streams.c \
		symbols.c values.c
UNIX_SRCS =	unix_dl.c unix_files.c unix_main.c unix_processes.c

INSTALL_HDRS = rep.h rep_lisp.h rep_regexp.h rep_subrs.h

SRCS = $(COMMON_SRCS) $(UNIX_SRCS)
OBJS = $(SRCS:.c=.lo)

SDBM_SRCS = sdbm.c sdbm_pair.c sdbm_hash.c
SDBM_OBJS = $(SDBM_SRCS:.c=.lo)

DL_SRCS = test-dl.c repsdbm.c timers.c
DL_OBJS = libtest-dl.la libsdbm.la libtimers.la

REP_SRCS =	rep.c
REP_OBJS =	$(REP_SRCS:.c=.o)

all : libxsdbm.la librep.la $(DL_OBJS) rep rep-config rep-remote

libxsdbm.la : $(SDBM_OBJS)
	$(LIBTOOL) $(CC) $(LDFLAGS) -o $@ $^ -rpath $(libdir)

librep.la : $(OBJS) $(LIBOBJS) $(ALLOCA)
	$(LIBTOOL) $(CC) $(LDFLAGS) -version-info $(libversion) \
	  -o $@ $^ -rpath $(libdir)

rep : $(REP_OBJS) $(EXTRA_LIBOBJS) librep.la
	$(LIBTOOL) $(CC) -export-dynamic $(CPPFLAGS) $(CFLAGS) -o $@ \
	  $(REP_OBJS) librep.la $(EXTRA_LIBOBJS) $(LIBS)

rep-remote : rep-remote.c

install : all installdirs
	$(LIBTOOL) cp librep.la ${libdir}
	$(LIBTOOL) -n --finish ${libdir}
	$(LIBTOOL) cp rep ${bindir}
	$(LIBTOOL) cp repdoc ${bindir}
	$(INSTALL_SCRIPT) rep-config ${bindir}
	$(INSTALL_PROGRAM) rep-remote ${bindir}
	for dl in $(DL_OBJS); do \
	  $(LIBTOOL) cp $$dl ${repexecdir}; \
	done
	for i in $(INSTALL_HDRS); do \
	  $(INSTALL_DATA) $$i $(includedir); \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(libdir) $(bindir) \
	  $(repexecdir) $(includedir)

uninstall :
	$(LIBTOOL) rm ${libdir}/librep.la
	$(LIBTOOL) rm ${bindir}/rep
	$(LIBTOOL) rm ${bindir}/repdoc
	rm ${bindir}/rep-config
	rm ${bindir}/rep-remote
	for dl in $(DL_OBJS); do \
	  $(LIBTOOL) rm ${repexecdir}/$$dl; \
	done
	for i in $(INSTALL_HDRS); do \
	  rm $(includedir)/$$i; \
	done

rep-config : rep-config.sh
	$(SHELL) $< "${prefix}" "${exec_prefix}" "${version}" "${LIBS}" "${repcommonexecdir}" >$@
	chmod +x $@

repdoc : repdoc.o libxsdbm.la
	$(LIBTOOL) $(CC) -static $(LDFLAGS) -o $@ repdoc.o libxsdbm.la

libtest-dl.la : test-dl.c

libsdbm.la : $(SDBM_OBJS) repsdbm.lo
	$(LIBTOOL) $(CC) $(LDFLAGS) -module -o $@ \
	 $(SDBM_OBJS) repsdbm.lo -rpath $(repexecdir)

clean :
	rm -f *~ *.o *.lo *.la build.h
	rm -f repdoc core rep rep-remote

realclean : clean
	rm -f .*.d Makefile rep.h dump.out dumped.s rep-config
	rm -rf .libs

include $(SRCS:%.c=.%.d) $(DL_SRCS:%.c=.%.d) $(REP_SRCS:%.c=.%.d)
