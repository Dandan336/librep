rep_prog = ../libtool --mode=execute -dlopen ../src/libsdbm.la ../src/rep
COMPILE_ENV = REPLISPDIR=. REPDOCFILE=../DOC

INSTALL_FILES = *.jl *.jlc

all : lisp

lisp :
	$(COMPILE_ENV) $(rep_prog) --batch --no-rc \
	  -l compiler -f compile-compiler
	$(COMPILE_ENV) $(rep_prog) --batch --no-rc -f compile-lisp-lib

install : all installdirs
	for f in $(INSTALL_FILES); do \
	  $(INSTALL_DATA) $$f $(DESTDIR)$(replispdir); \
	done

installdirs : $(top_srcdir)/mkinstalldirs
	$(SHELL) $(top_srcdir)/mkinstalldirs $(DESTDIR)$(replispdir)

uninstall :
	for f in $(INSTALL_FILES); do \
	  rm -f $(DESTDIR)$(replispdir)/$$f; \
	done

clean :
	rm -f *.jlc *.jld *~

realclean : clean
	rm -f Makefile

.PHONY : all lisp install uninstall clean realclean
